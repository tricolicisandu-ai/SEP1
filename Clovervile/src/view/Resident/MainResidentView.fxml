<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Resident.MainResidentViewController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Exit">
            <items>
              <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#handleActions" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="About">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#handleActions" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TabPane prefHeight="330.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="addResidentsTab" onSelectionChanged="#tabChanged" text="Add Residents">
            <content>
                <fx:include fx:id="addResidents" source="AddResidentView.fxml" />
            </content>
          </Tab>
            <Tab fx:id="manageResidentsTab" onSelectionChanged="#tabChanged" text="Manage Residents">
              <content>
                  <fx:include fx:id="manageResidents" source="ManageResidentsView.fxml" />
              </content>
            </Tab>
            <Tab fx:id="personalPontsTab" onSelectionChanged="#tabChanged" text="Personal Points">
              <content>
                  <fx:include fx:id="personalPoints" source="PersonalPointsView.fxml" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleActions" text="Back">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
