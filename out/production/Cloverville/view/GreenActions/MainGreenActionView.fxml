<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GreenActions.MainGreenActionController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Exit">
            <items>
              <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#handleActions" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="About">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#handleActions" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TabPane prefHeight="340.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab fx:id="addGreenActionTab" onSelectionChanged="#tabChanged" text="Add Green Action">
                <content>
                    <fx:include fx:id="addGreenAction" source="AddGreenActionView.fxml" />
                </content>
            </Tab>
            <Tab fx:id="manageGreenActionTab" onSelectionChanged="#tabChanged" text="Manage Green Action">
                <content>
                    <fx:include fx:id="manageGreenAction" source="ManageGreenActionView.fxml" />
                </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleActions" prefHeight="25.0" prefWidth="40.5" text="Back">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
